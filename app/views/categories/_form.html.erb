<%= form_with(model: @category) do |form| %>

  <%= form.label "Назва категорії ", style: "display: block" %>   
  <%= form.text_field :name, class: "form-text w-25" %>

  <%= form.label "Опис категорії ", style: "display: block" %>
  <%= form.text_field :description, class: "form-text w-75" %>
  <br>
  <br>
  <%= form.submit "Зберегти", class: "btn btn-outline-primary" %>
  <%= link_to 'Відмовитися', categories_path, class: 'btn btn-outline-primary' %>
<% end %>
